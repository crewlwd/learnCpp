{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/main.cpp",
				"${workspaceFolder}/hero.cpp",
				"${workspaceFolder}/Warrior.cpp",
				"${workspaceFolder}/Archmage.cpp",
				"-o",
				"${workspaceFolder}/main"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}